<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChapterExamActivity"
    android:padding="8sp">

    <LinearLayout
        android:layout_margin="8sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Question"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <TextView
            android:background="@android:color/white"
            android:id="@+id/exam_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Question example text. Question example text. Question example text. Question example text. Question example text. Question "
            android:maxLines="7" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="8sp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="8sp"
            android:text="Answers"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:layout_gravity="center"
            android:layout_margin="8sp"
            android:id="@+id/exam_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/exam_answer_1"
                android:text="Answer one"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/exam_answer_2"
                android:text="Answer one"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/exam_answer_3"
                android:text="Answer one"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/exam_answer_4"
                android:text="Answer one"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>