<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8sp"
    android:layout_marginTop="4sp"
    android:layout_marginEnd="8sp"
    android:layout_marginBottom="4sp"
    app:cardBackgroundColor="@color/colorItem"
    app:cardCornerRadius="10sp"
    app:cardElevation="5sp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_edit_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Question"
                tools:text="Question example text. Question example text. Question example text. Question example text. Question example text. Question "
                android:maxLines="7"
                android:inputType="textMultiLine|textAutoComplete|textAutoCorrect" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--<TextView
            android:layout_marginTop="8sp"
            android:text="Answers"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

        <!-- Correct answer -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_edit_correct_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correct answer"
                android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--<View style="@style/Divider"/>-->

        <!-- Wrong answer 1 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_edit_wrong_answer_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wrong answer (1)"
                android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Wrong answer 2 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_edit_wrong_answer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wrong answer (2)"
                android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Wrong answer 3 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_edit_wrong_answer_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wrong answer (3)"
                android:inputType="textMultiLine|textAutoComplete|textAutoCorrect"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>