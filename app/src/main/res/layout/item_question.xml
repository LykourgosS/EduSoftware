<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8sp"
    android:layout_marginTop="4sp"
    android:layout_marginEnd="8sp"
    android:layout_marginBottom="4sp"
    app:cardBackgroundColor="@color/colorItem"
    app:cardCornerRadius="10sp"
    app:cardElevation="5sp">

    <LinearLayout
        android:padding="8sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Label for question-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textColor="@android:color/black" />

        <!--Description-->
        <TextView
            android:id="@+id/item_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="No description"
            tools:text="This is an example question. This is an example question. This is an example question. This is an example question. This is an example question. This is an example question. This is an example question. This is an example question. "/>

    </LinearLayout>

</androidx.cardview.widget.CardView>